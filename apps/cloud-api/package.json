{
    "name": "@apps/cloud-api",
    "version": "2.0.0",
    "description": "NetOpsAI Cloud API - Modular monolith",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/main.ts",
        "build": "tsup src/main.ts --format esm",
        "start": "node dist/main.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:unit": "vitest run src/modules",
        "test:integration": "vitest run src/tests/e2e",
        "test:coverage": "vitest run --coverage",
        "test:all": "vitest run && vitest run src/tests/e2e",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@application/core": "workspace:*",
        "@contracts/shared": "workspace:*",
        "@domain/core": "workspace:*",
        "@fastify/cors": "^10.1.0",
        "@fastify/helmet": "^13.0.1",
        "@fastify/multipart": "^9.3.0",
        "@fastify/rate-limit": "^10.2.0",
        "@fastify/swagger": "^9.4.2",
        "@fastify/swagger-ui": "^5.2.2",
        "@infra/netdevice": "workspace:*",
        "@infra/postgres": "workspace:*",
        "@security/core": "workspace:*",
        "@tools/registry": "workspace:*",
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "fastify-i18next": "^0.5.1",
        "i18next": "^25.7.4",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.11.0",
        "pino-pretty": "^11.0.0",
        "prom-client": "^15.1.0",
        "uuid": "^11.1.0",
        "zod": "^3.22.4",
        "zod-to-json-schema": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.11.0",
        "@types/uuid": "^10.0.0",
        "@vitest/coverage-v8": "^1.0.0",
        "tsup": "^8.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vite-tsconfig-paths": "^6.0.3",
        "vitest": "^1.0.0"
    }
}