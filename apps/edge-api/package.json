{
    "name": "@apps/edge-api",
    "version": "2.0.0",
    "description": "NetOpsAI Edge API - Local job runner bridge",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/main.ts",
        "build": "tsup",
        "start": "node dist/main.js",
        "migrate": "node dist/scripts/migrate.js",
        "seed": "node dist/scripts/seed.js",
        "test": "vitest run",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@infra-edge/db": "workspace:*",
        "@infra-edge/redis": "workspace:*",
        "@security/core": "workspace:*",
        "@fastify/helmet": "^13.0.1",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3",
        "redis": "^5.10.0"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.10.9",
        "tsup": "^8.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    }
}