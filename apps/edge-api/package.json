{
    "name": "@apps/edge-api",
    "version": "2.0.0",
    "description": "Edge API - Local job runner bridge",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/main.ts",
        "build": "tsup src/main.ts --format esm",
        "start": "node dist/main.js",
        "test": "vitest run",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@fastify/helmet": "^13.0.1",
        "dotenv": "^17.2.3",
        "fastify": "^5.6.2",
        "jsonwebtoken": "^9.0.3"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.10.0",
        "tsup": "^8.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    }
}