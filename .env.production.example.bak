# ===========================================
# Hospital IT Gateway - Production Environment
# ===========================================
# IMPORTANT: Copy this to .env.production and fill in real values
# NEVER commit .env.production to version control!

# System
NODE_ENV=production
VERSION=1.0.0
LOG_LEVEL=info

# Ports
API_PORT=3000
MCP_PORT=3001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database
POSTGRES_DB=hospital_gateway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# LLM Providers
OPENROUTER_API_KEY=sk-or-v1-YOUR-KEY-HERE
OPENAI_API_KEY=sk-YOUR-KEY-HERE
ANTHROPIC_API_KEY=sk-ant-YOUR-KEY-HERE

# Security
JWT_SECRET=CHANGE_ME_RANDOM_64_CHAR_STRING
ENCRYPTION_KEY=CHANGE_ME_32_BYTE_HEX_KEY

# External Systems (Optional)
ZABBIX_API_URL=http://zabbix.hospital.local/api_jsonrpc.php
ZABBIX_API_TOKEN=
FORTIGATE_API_URL=https://fortigate.hospital.local
FORTIGATE_API_TOKEN=

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
