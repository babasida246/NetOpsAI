{
    "name": "hospital-it-gateway",
    "version": "6.0.0",
    "private": true,
    "type": "module",
    "description": "Hospital IT AI Gateway - Phase 6 Complete (Docker Deployment)",
    "scripts": {
        "dev": "concurrently \"pnpm --filter gateway-api dev\" \"pnpm --filter gateway-mcp dev\"",
        "build": "pnpm -r build",
        "test": "pnpm -r test",
        "test:unit": "pnpm -r test -- --run",
        "test:integration": "pnpm --filter @apps/gateway-api test -- --run",
        "test:e2e": "pnpm --filter @tools/registry test -- --run && pnpm --filter @application/core test -- --run",
        "test:watch": "pnpm -r test -- --watch",
        "test:coverage": "pnpm -r test -- --coverage",
        "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit --exit-code-from test-integration",
        "lint": "eslint . --ext .ts",
        "clean": "pnpm -r exec rm -rf node_modules dist",
        "typecheck": "pnpm -r exec tsc --noEmit",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "validate": "bash scripts/validate-deployment.sh",
        "deploy": "bash scripts/deploy.sh"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "concurrently": "^8.2.0",
        "eslint": "^8.55.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "dependencies": {
        "pg": "^8.16.3"
    }
}