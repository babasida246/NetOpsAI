# Hospital IT Gateway - Docker Compose
# Usage: docker-compose up -d

services:
  # PostgreSQL Database
  postgres:
    image: postgres:15-alpine
    container_name: hospital-gateway-postgres
    restart: unless-stopped
    environment:
      POSTGRES_DB: ${POSTGRES_DB:-hospital_gateway}
      POSTGRES_USER: ${POSTGRES_USER:-postgres}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      PGDATA: /var/lib/postgresql/data/pgdata
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./packages/infra-postgres/src/schema.sql:/docker-entrypoint-initdb.d/01-schema.sql:ro
    ports:
      - "${POSTGRES_PORT:-5432}:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-postgres}"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - hospital-gateway-network
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 1G
        reservations:
          cpus: '0.5'
          memory: 512M

  # Redis Cache
  redis:
    image: redis:7-alpine
    container_name: hospital-gateway-redis
    restart: unless-stopped
    command: redis-server --requirepass ${REDIS_PASSWORD} --maxmemory 512mb --maxmemory-policy allkeys-lru
    volumes:
      - redis_data:/data
    ports:
      - "${REDIS_PORT:-6379}:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "--raw", "incr", "ping"]
      interval: 10s
      timeout: 3s
      retries: 5
    networks:
      - hospital-gateway-network
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M

  # Gateway API Service
  gateway-api:
    build:
      context: .
      dockerfile: apps/api/Dockerfile
    container_name: hospital-gateway-api
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    environment:
      NODE_ENV: ${NODE_ENV:-production}
      PORT: 3000
      LOG_LEVEL: ${LOG_LEVEL:-info}
      DATABASE_URL: postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB:-hospital_gateway}
      REDIS_URL: redis://:${REDIS_PASSWORD}@redis:6379
      OPENROUTER_API_KEY: ${OPENROUTER_API_KEY}
      OPENAI_API_KEY: ${OPENAI_API_KEY:-}
      ANTHROPIC_API_KEY: ${ANTHROPIC_API_KEY:-}
      JWT_SECRET: ${JWT_SECRET}
      ENCRYPTION_KEY: ${ENCRYPTION_KEY}
      ZABBIX_API_URL: ${ZABBIX_API_URL:-}
      ZABBIX_API_TOKEN: ${ZABBIX_API_TOKEN:-}
      FORTIGATE_API_URL: ${FORTIGATE_API_URL:-}
      FORTIGATE_API_TOKEN: ${FORTIGATE_API_TOKEN:-}
    ports:
      - "${API_PORT:-3000}:3000"
    volumes:
      - ./logs:/app/logs
    networks:
      - hospital-gateway-network
    labels:
      - "com.hospital.gateway.service=api"
      - "com.hospital.gateway.version=${VERSION:-latest}"
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 2G
        reservations:
          cpus: '0.5'
          memory: 512M

  # MCP Server
  gateway-mcp:
    build:
      context: .
      dockerfile: apps/gateway-mcp/Dockerfile.simple
    container_name: hospital-gateway-mcp
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    environment:
      NODE_ENV: ${NODE_ENV:-production}
      PORT: 3001
      LOG_LEVEL: ${LOG_LEVEL:-info}
      DATABASE_URL: postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB:-hospital_gateway}
      REDIS_URL: redis://:${REDIS_PASSWORD}@redis:6379
      OPENROUTER_API_KEY: ${OPENROUTER_API_KEY}
      JWT_SECRET: ${JWT_SECRET}
      ENCRYPTION_KEY: ${ENCRYPTION_KEY}
    ports:
      - "${MCP_PORT:-3001}:3001"
    volumes:
      - ./logs:/app/logs
    networks:
      - hospital-gateway-network
    labels:
      - "com.hospital.gateway.service=mcp"
      - "com.hospital.gateway.version=${VERSION:-latest}"
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 1G
        reservations:
          cpus: '0.25'
          memory: 256M

  # pgAdmin - PostgreSQL Management GUI
  pgadmin:
    image: dpage/pgadmin4:7
    container_name: hospital-pgadmin
    restart: unless-stopped
    environment:
      PGADMIN_DEFAULT_EMAIL: ${PGADMIN_DEFAULT_EMAIL:-admin@example.com}
      PGADMIN_DEFAULT_PASSWORD: ${PGADMIN_DEFAULT_PASSWORD:-admin}
      PGADMIN_CONFIG_SERVER_MODE: 'True'
      PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED: 'False'
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    ports:
      - "${PGADMIN_PORT:-5050}:80"
    volumes:
      - pgadmin_data:/var/lib/pgadmin
      - ./docker/pgadmin/servers.json:/pgadmin4/servers.json:ro
      - ./docker/pgadmin/init-servers.sh:/docker-entrypoint.d/init-servers.sh:ro
    networks:
      - hospital-gateway-network
    depends_on:
      postgres:
        condition: service_healthy
    labels:
      - "com.hospital.gateway.service=pgadmin"
      - "com.hospital.gateway.description=PostgreSQL Administration"

  # RedisInsight - Redis Management GUI
  redisinsight:
    build:
      context: ./docker/redisinsight
    image: hospital-redisinsight:local
    container_name: hospital-redisinsight
    restart: unless-stopped
    environment:
      REDIS_PASSWORD: ${REDIS_PASSWORD}
    ports:
      - "${REDISINSIGHT_PORT:-8001}:5540"
    volumes:
      - redisinsight_data:/data
      - ./docker/redisinsight/init-redis.sh:/docker-entrypoint.d/init-redis.sh:ro
    networks:
      - hospital-gateway-network
    depends_on:
      redis:
        condition: service_healthy
    labels:
      - "com.hospital.gateway.service=redisinsight"
      - "com.hospital.gateway.description=Redis Administration"

  

  # Web UI
  web-ui:
    build:
      context: .
      dockerfile: apps/web-ui/Dockerfile
      args:
        VITE_API_BASE: ${VITE_API_BASE:-http://localhost:3000}
    container_name: hospital-gateway-web-ui
    restart: unless-stopped
    depends_on:
      - gateway-api
    environment:
      NODE_ENV: ${NODE_ENV:-production}
      PORT: 3003
      # API_URL kept for runtime server processes if needed; client uses VITE_API_BASE embedded at build
      API_URL: http://gateway-api:3000
    ports:
      - "${WEB_UI_PORT:-3003}:3003"
    networks:
      - hospital-gateway-network
    labels:
      - "com.hospital.gateway.service=web-ui"
      - "com.hospital.gateway.version=${VERSION:-latest}"
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 512M
        reservations:
          cpus: '0.25'
          memory: 256M

  # Nginx Reverse Proxy (Optional)
  nginx:
    image: nginx:alpine
    container_name: hospital-gateway-nginx
    restart: unless-stopped
    profiles:
      - proxy
    depends_on:
      - gateway-api
      - gateway-mcp
      - web-ui
    ports:
      - "${NGINX_HTTP_PORT:-80}:80"
      - "${NGINX_HTTPS_PORT:-443}:443"
    volumes:
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./docker/nginx/ssl:/etc/nginx/ssl:ro
    networks:
      - hospital-gateway-network
    labels:
      - "com.hospital.gateway.service=nginx"
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 256M

volumes:
  postgres_data:
    driver: local
  redis_data:
    driver: local
  pgadmin_data:
    driver: local
  redisinsight_data:
    driver: local

networks:
  hospital-gateway-network:
    driver: bridge
