{
    "name": "@infra/postgres",
    "version": "1.0.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc src/index.ts --outDir dist --declaration --module NodeNext --target ES2022",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "test": "vitest run",
        "migrate": "node dist/migrate.js"
    },
    "dependencies": {
        "@domain/core": "workspace:*",
        "@contracts/shared": "workspace:*",
        "pg": "^8.11.3",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/pg": "^8.10.9",
        "typescript": "^5.3.0",
        "tsup": "^8.0.0",
        "vitest": "^1.0.0"
    }
}