{
    "$id": "nettools.device_cli_collect.input",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "deviceId",
        "commands"
    ],
    "properties": {
        "deviceId": {
            "type": "string",
            "minLength": 1
        },
        "commands": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "BRIDGE_HOST",
                    "IP_NEIGHBOR",
                    "LLDP_NEIGHBORS",
                    "IP_ARP",
                    "INTERFACE_DETAIL"
                ]
            }
        },
        "timeoutSec": {
            "type": "integer",
            "minimum": 3,
            "maximum": 30,
            "default": 10
        }
    }
}