# Docker Compose for Testing
# Usage: docker-compose -f docker-compose.test.yml up --abort-on-container-exit

services:
  # Test Database
  postgres-test:
    image: postgres:15-alpine
    container_name: hospital-gateway-postgres-test
    environment:
      POSTGRES_DB: hospital_gateway_test
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: test_password
    ports:
      - "5433:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 3s
      retries: 5
    networks:
      - test-network
    tmpfs:
      - /var/lib/postgresql/data

  # Test Redis
  redis-test:
    image: redis:7-alpine
    container_name: hospital-gateway-redis-test
    command: redis-server --requirepass test_password
    ports:
      - "6380:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 5s
      timeout: 3s
      retries: 5
    networks:
      - test-network
    tmpfs:
      - /data

  # Unit Tests Runner
  test-unit:
    build:
      context: .
      dockerfile: Dockerfile.test
      target: test-runner
    container_name: hospital-gateway-test-unit
    environment:
      NODE_ENV: test
      LOG_LEVEL: error
    command: pnpm test:unit
    volumes:
      - ./coverage:/app/coverage
    networks:
      - test-network

  # Integration Tests Runner
  test-integration:
    build:
      context: .
      dockerfile: Dockerfile.test
      target: test-runner
    container_name: hospital-gateway-test-integration
    depends_on:
      postgres-test:
        condition: service_healthy
      redis-test:
        condition: service_healthy
    environment:
      NODE_ENV: test
      LOG_LEVEL: error
      DATABASE_URL: postgresql://postgres:test_password@postgres-test:5432/hospital_gateway_test
      REDIS_URL: redis://:test_password@redis-test:6379
      OPENROUTER_API_KEY: test-key-not-used
      JWT_SECRET: test-jwt-secret
      ENCRYPTION_KEY: 0123456789abcdef0123456789abcdef
    command: pnpm test:integration
    volumes:
      - ./coverage:/app/coverage
    networks:
      - test-network

  # E2E Tests Runner
  test-e2e:
    build:
      context: .
      dockerfile: Dockerfile.test
      target: test-runner
    container_name: hospital-gateway-test-e2e
    depends_on:
      postgres-test:
        condition: service_healthy
      redis-test:
        condition: service_healthy
    environment:
      NODE_ENV: test
      LOG_LEVEL: error
      DATABASE_URL: postgresql://postgres:test_password@postgres-test:5432/hospital_gateway_test
      REDIS_URL: redis://:test_password@redis-test:6379
      OPENROUTER_API_KEY: test-key-not-used
      JWT_SECRET: test-jwt-secret
      ENCRYPTION_KEY: 0123456789abcdef0123456789abcdef
    command: pnpm test:e2e
    volumes:
      - ./coverage:/app/coverage
    networks:
      - test-network

networks:
  test-network:
    driver: bridge
