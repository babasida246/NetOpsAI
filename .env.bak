# System
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
VERSION=6.0.0

# Ports (for Docker Compose)
API_PORT=3000
MCP_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379

# Database
POSTGRES_DB=hospital_gateway
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
DATABASE_URL=postgresql://postgres:dev_password_123@localhost:5432/hospital_gateway
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_PASSWORD=redis_dev_123
REDIS_URL=redis://:redis_dev_123@localhost:6379
REDIS_KEY_PREFIX=hospital_gateway:

# LLM Providers
OPENROUTER_API_KEY=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
OPENAI_API_KEY=sk-xxx-your-key-here
ANTHROPIC_API_KEY=sk-ant-xxx-your-key-here

# Security
JWT_SECRET=dev-jwt-secret-do-not-use-in-production-12345678901234567890
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# External Systems
ZABBIX_API_URL=http://zabbix.hospital.local/api_jsonrpc.php
ZABBIX_API_TOKEN=your-zabbix-token
FORTIGATE_API_URL=https://fortigate.hospital.local
FORTIGATE_API_TOKEN=your-fortigate-token

# pgAdmin defaults used by docker-compose
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# ---------------------------------------------------------------------------
# Additional variables added for Docker/deploy and chat features
# These are appended to avoid overwriting existing values. Edit as needed.
# ---------------------------------------------------------------------------
# Web UI (build-time) - set to gateway-api service for container networking
VITE_API_BASE=http://gateway-api:3000

# Optional runtime overrides
WEB_UI_PORT=3003

# Optional: OpenRouter, Google keys (if used)
GOOGLE_API_KEY=

# JWT access/refresh granularity (used by some services)
JWT_ACCESS_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_SECRET}

# Optional: email for admin notifications
ADMIN_EMAIL=admin@example.com

