# ============================================
# Production Environment Configuration
# Hospital IT Gateway
# ============================================

# ============================================
# Service Configuration
# ============================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:password@postgres:5432/hospital_gateway
DB_POOL_MIN=5
DB_POOL_MAX=20

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379
REDIS_KEY_PREFIX=hospital_gateway:
REDIS_MAX_RETRIES=3

# ============================================
# OpenRouter Configuration
# ============================================
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration (Tier-based)
OPENROUTER_MODEL_T0=mistralai/mistral-7b-instruct:free
OPENROUTER_MODEL_T1=google/gemma-7b-it:free
OPENROUTER_MODEL_T2=anthropic/claude-3-haiku
OPENROUTER_MODEL_T3=anthropic/claude-3-opus

# ============================================
# Zabbix MCP Integration
# ============================================
ZABBIX_API_URL=https://zabbix.example.com/api_jsonrpc.php
ZABBIX_API_TOKEN=your-zabbix-api-token-here
ZABBIX_VERIFY_SSL=true
ZABBIX_TIMEOUT=30000

# ============================================
# FortiGate MCP Integration
# ============================================
FORTIGATE_API_URL=https://fortigate.example.com/api/v2
FORTIGATE_API_KEY=your-fortigate-api-key-here
FORTIGATE_VERIFY_SSL=true
FORTIGATE_TIMEOUT=30000
FORTIGATE_VDOM=root

# ============================================
# Syslog MCP Integration  
# ============================================
SYSLOG_HOST=syslog.example.com
SYSLOG_PORT=514
SYSLOG_PROTOCOL=udp
SYSLOG_FACILITY=16
SYSLOG_MAX_CONNECTIONS=10

# For TLS syslog
# SYSLOG_PROTOCOL=tls
# SYSLOG_TLS_CA=/path/to/ca.crt
# SYSLOG_TLS_CERT=/path/to/client.crt
# SYSLOG_TLS_KEY=/path/to/client.key

# ============================================
# SSE Streaming Configuration
# ============================================
SSE_HEARTBEAT_INTERVAL=15000
SSE_MAX_CONNECTION_TIME=3600000
SSE_BUFFER_SIZE=16384

# ============================================
# Summarization Configuration
# ============================================
SUMMARY_TRIGGER_THRESHOLD=30
SUMMARY_CACHE_TTL=3600
SUMMARY_MAX_TOKEN_INPUT=8000
SUMMARY_MAX_TOKEN_OUTPUT=500

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_TOKENS_PER_MIN=100000

# ============================================
# Observability
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
SERVICE_NAME=hospital-gateway-api
SERVICE_VERSION=1.0.0

# ============================================
# Security
# ============================================
CORS_ORIGIN=https://your-frontend-domain.com
JWT_SECRET=your-jwt-secret-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production

# ============================================
# Feature Flags
# ============================================
ENABLE_MCP_ZABBIX=true
ENABLE_MCP_FORTIGATE=true
ENABLE_MCP_SYSLOG=true
ENABLE_SUMMARIZATION=true
ENABLE_SSE_STREAMING=true
