# System
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=netopsai_gateway
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/netopsai_gateway
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379
REDIS_KEY_PREFIX=netopsai_gateway:

# LLM Providers
OPENROUTER_API_KEY=sk-or-xxx-your-key-here
OPENAI_API_KEY=sk-xxx-your-key-here
ANTHROPIC_API_KEY=sk-ant-xxx-your-key-here

# Security
JWT_SECRET=change-me-in-production
ENCRYPTION_KEY=change-me-to-32-byte-hex-key

# External Systems
ZABBIX_API_URL=http://zabbix.NetOpsAI.local/api_jsonrpc.php
ZABBIX_API_TOKEN=your-zabbix-token
FORTIGATE_API_URL=https://fortigate.NetOpsAI.local
FORTIGATE_API_TOKEN=your-fortigate-token

# Web UI build/runtime
VITE_API_BASE=http://localhost:3000
WEB_UI_PORT=3003
BACKEND_BASE_URL=http://gateway-api:3000

# Optional: Google API key
GOOGLE_API_KEY=

# JWT access/refresh
JWT_ACCESS_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_SECRET}

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_NAME=Default Admin

# Chat bootstrap (optional JSON arrays)
# CHAT_DEFAULT_PROVIDERS=[]
# CHAT_DEFAULT_MODELS=[]
# CHAT_DEFAULT_RULES=[]

# VERSION (optional)
# VERSION=6.0.0

